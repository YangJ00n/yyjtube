extends ../base.pug
include ../mixins/video

block content
    div.main__video-grid
        form(method="GET").search__form
            input(placeholder="Search by title",name="keyword", type="text", autocomplete="off")
            button
                i.fas.fa-search

        div.video-grid
            each video in videos 
                +video(video)
            else
                span.empty__message No videos found