extends ../base
include ../mixins/video

block content
    div.profile__data
        if user.avatarUrl.includes("github")
            img.avatar(src=user.avatarUrl)
        else
            img.avatar(src="/" + user.avatarUrl)
        h3=user.name
        small Created At #{new Date(user.createdAt).toLocaleString("ko-kr")}
    div.profile__videos
        h1 My Videos
        div.video-grid
            each video in user.videos
                +video(video)
            else
                span.empty__message No videos found
    div.profile__videos
        h1 Liked Videos
        div.video-grid
            each video in likedVideos
                +video(video)
            else
                span.empty__message No videos found