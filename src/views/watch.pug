extends base

block content
    div#videoContainer(data-id=video._id)
        video(src=`/${video.fileUrl}`) 
        div#videoControls.videoControls.showing
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                span#mute
                    i.fas.fa-volume-up
                input(type="range",step="0.01", value=0.5, min="0", max="1")#volume
            div.videoControls__playbackRate
                select(name="playbackRate")#playbackRate
                    option(value="0.25") 0.25x
                    option(value="0.5") 0.5x
                    option(value="0.75") 0.75x
                    option(value="1" selected) 1x
                    option(value="1.25") 1.25x
                    option(value="1.5") 1.5x
                    option(value="1.75") 1.75x
                    option(value="2") 2x
            div.videoControls__fullScreen
                span#fullScreen
                    i.fas.fa-expand

